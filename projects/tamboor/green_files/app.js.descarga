 * OPAQUE NAVBAR SCRIPT
 **********************************************************
 */

 // Toggle tranparent navbar when the user scrolls the page

 $(window).scroll(function() {
   if($(this).scrollTop() > 30)  /*height in pixels when the navbar becomes non opaque*/
   {
       $('.opaque-navbar').addClass('opaque');
   } else {
       $('.opaque-navbar').removeClass('opaque');
   }
});


$(window).scroll(function() {
    if($(this).scrollTop() > 15)  /*height in pixels when the navbar becomes non opaque*/
    {
        $('#navbar--mobile').addClass('opaque_m');
    } else {
        $('#navbar--mobile').removeClass('opaque_m');
    }
});



